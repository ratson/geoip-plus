{
  "private": true,
  "name": "geoip-plus-monorepo",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext js,md .",
    "test": "ava; cd packages/geoip-plus; mocha",
    "bench": "cd benchmark; node .",
    "upload-prebuilds": "cd packages/geoip-plus; prebuild -t 10.1.0 -t 10.0.0 -t 9.11.1 --strip --verbose"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "eslint": "^5.9.0",
    "eslint-config-concise": "^0.32.0",
    "eslint-config-concise-ava": "^0.32.0",
    "eslint-config-concise-esnext": "^0.32.0",
    "husky": "^1.1.3",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "preslint": "^0.32.0"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    },
    "extends": [
      "concise",
      "concise-esnext",
      "concise-ava"
    ]
  },
  "lint-staged": {
    "*.js": [
      "preslint --fix --git"
    ]
  },
  "workspaces": [
    "benchmark",
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
