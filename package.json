{
  "private": true,
  "name": "geoip-plus-monorepo",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext js,md .",
    "test": "ava; cd packages/geoip-plus; mocha",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "bench": "cd benchmark; node .",
    "upload-prebuilds": "cd packages/geoip-plus; prebuild -t 10.1.0 -t 10.0.0 -t 9.11.1 --strip --verbose"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "eslint": "^4.19.1",
    "eslint-config-concise": "^0.24.0",
    "eslint-config-concise-ava": "^0.23.0",
    "eslint-config-concise-esnext": "^0.24.1",
    "husky": "^0.14.3",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.1.0",
    "preslint": "^0.23.1"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    },
    "extends": [
      "concise",
      "concise-esnext",
      "concise-ava"
    ]
  },
  "lint-staged": {
    "*.js": [
      "preslint --fix --git"
    ]
  },
  "workspaces": [
    "benchmark",
    "packages/*"
  ]
}
